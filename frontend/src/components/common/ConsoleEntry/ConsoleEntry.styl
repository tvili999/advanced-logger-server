.ConsoleEntry
    border-bottom: 1px solid #bdbdbd

    &__label
        display flex
        flex-flow row nowrap
        align-items center
        padding 12px


    > *:not(:first-child)
        margin-left 8px

    &__message
        flex 1 1 0
        text-overflow: ellipsis
        overflow hidden
        word-break: keep-all
        white-space nowrap

    &--error
        background-color: darkred;